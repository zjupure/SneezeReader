<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sneezereader" >

    <!-- 权限声明 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="ANDROID.PERMISSION.GET_TASKS" />

    <application
        android:name="com.example.sneezereader.SneezeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.sneezereader.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.sneezereader.MainActivity">
        </activity>

        <activity
            android:name="com.example.sneezereader.DetailActivity"
            android:parentActivityName="com.example.sneezereader.MainActivity">
            <!-- meta-data 用于支持support 4.0以及以下指明上级活动 -->
            <meta-data
                android:name="android:support.PARENT_ACTIVITY"
                android:value="com.example.sneezereader.MainActivity" />
        </activity>

    </application>

</manifest>
