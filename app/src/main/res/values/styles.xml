<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- toolbar color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- statusbar color -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- UI style -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- window background color -->
        <item name="android:windowBackground">@color/background</item>
        <!-- text color
        <item name="textColorPrimary">@color/textDark</item>
        -->
        <!-- Custom Theme -->
        <item name="global_background">@color/background</item>
        <item name="global_textColor">@color/textDark</item>
        <item name="toolbar_background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- toolbar color -->
        <item name="colorPrimary">@color/nightColorPrimary</item>
        <!-- statusbar color -->
        <item name="colorPrimaryDark">@color/nightColorPrimaryDark</item>
        <!-- UI style -->
        <item name="colorAccent">@color/nightColorAccent</item>
        <!-- window background color -->
        <item name="android:windowBackground">@color/nightBackground</item>
        <!-- text color
        <item name="textColorPrimary">@color/textLight</item>
        -->
        <!-- Custom Theme -->
        <item name="global_background">@color/nightBackground</item>
        <item name="global_textColor">@color/textLight</item>
        <item name="toolbar_background">@color/nightColorPrimary</item>
    </style>

    <!-- RadioButton Style -->
    <style name="tab_bottom" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <!-- Setting Layout Style -->
    <style name="setting_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/item_background</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="setting_item_more" parent="setting_item">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!--  这个是加入的代码 -->
    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>

</resources>
