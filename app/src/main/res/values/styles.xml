<resources>

    <!-- Base Application Style -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here -->

        <!-- toolbar color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- statusbar color -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- UI style -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- window background color -->
        <item name="android:windowBackground">@color/background</item>
        <!-- text color -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!-- Navigation bar color
        <item name="android:navigationBarColor" target="21">@color/navigationBarColor</item>
        -->
    </style>


    <!-- RadioButton Style -->
    <style name="tab_bottom" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Setting Layout Style -->
    <style name="setting_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <style name="setting_item_more" parent="setting_item">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!--  这个是加入的代码 -->
    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>

</resources>
