<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar color -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <!-- statusbar color -->
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- UI style -->
        <item name="android:colorAccent">@color/colorAccent</item>
        <!-- window background color -->
        <item name="android:windowBackground">@color/background</item>

        <!-- text color -->
        <item name="android:textColorPrimary">@color/textDark</item>

        <!-- status bar -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <!-- navigation bar -->
        <item name="android:navigationBarColor">@color/colorPrimary</item>

        <!-- Custom Theme -->
        <item name="global_background">@color/background</item>
        <item name="global_textColor">@color/textDark</item>
        <item name="toolbar_background">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar color -->
        <item name="android:colorPrimary">@color/nightColorPrimary</item>
        <!-- statusbar color -->
        <item name="android:colorPrimaryDark">@color/nightColorPrimaryDark</item>
        <!-- UI style -->
        <item name="android:colorAccent">@color/nightColorAccent</item>
        <!-- window background color -->
        <item name="android:windowBackground">@color/nightBackground</item>
        <!-- text color -->
        <item name="android:textColorPrimary">@color/textLight</item>

        <!-- status bar -->
        <item name="android:statusBarColor">@color/nightColorPrimaryDark</item>
        <!-- navigation bar -->
        <item name="android:navigationBarColor">@color/nightColorPrimary</item>

        <!-- Custom Theme -->
        <item name="global_background">@color/nightBackground</item>
        <item name="global_textColor">@color/textLight</item>
        <item name="toolbar_background">@color/nightColorPrimary</item>
    </style>

</resources>
