<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:refresh="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
    <android.support.v7.widget.RecyclerView
        android:id="@+id/tugua_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    -->

    <com.handmark.pulltorefresh.library.PullToRefreshRecyclerView
        android:id="@+id/tugua_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        refresh:ptrAnimationStyle="flip"
        refresh:ptrMode="both"
        refresh:ptrDrawable="@mipmap/pulltorefresh_arrow"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/go_top_btn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@mipmap/go_top"
        android:tint="#ff0033"
        android:visibility="gone"/>

</RelativeLayout>

